<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.UsuarioDescuento" table="usuario_tiene_Descuento">
		<id column="idRelacion" name="idRelacion">
			<generator class="identity" />
		</id> 
		<many-to-one name="usuario" class="datos.Usuario" fetch="join">
            <column name="IDUSUARIO" />
        </many-to-one>
        <many-to-one name="Descuento" class="datos.Descuento" fetch="join">
            <column name="IDDESCUENTO" />
        </many-to-one>
		<property column="fechaAsignado" name="fechaAsignado" type="calendar" />
		<property column="activo" name="activo" type="boolean" />
	</class>
</hibernate-mapping>