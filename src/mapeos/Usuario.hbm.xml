<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Usuario" table="usuario">
		<id column="idUsuario" name="idUsuario">
			<generator class="identity" />
		</id>
		<property column="nombre" name="nombre" type="string" />
		<property column="apellido" name="apellido" type="string" />
		<property column="dni" name="dni" type="int" />
		<property column="pass" name="pass" type="string" />
		<property column="email" name="email" type="string" />
		<property column="permiso" name="permiso" type="string" />
		
		<set name="tarjetas" cascade="save-update" table="tarjeta" order-by="idTarjeta asc" lazy="true" fetch="join">
			<key column="idUsuario"/>
			<one-to-many class="datos.Tarjeta"/>
		</set>
		<set name="usuarioBeneficios" cascade="save-update" table="usuario_tiene_beneficio" order-by="fechaAsignado asc" lazy="true" fetch="join">
			<key column="idUsuario"/>
			<one-to-many class="datos.UsuarioBeneficio"/>
		</set>
		<set name="usuarioDescuentos" cascade="save-update" table="usuario_tiene_descuento" order-by="fechaAsignado asc" lazy="true" fetch="join">
			<key column="idUsuario"/>
			<one-to-many class="datos.UsuarioDescuento"/>
		</set>
	</class>
</hibernate-mapping>