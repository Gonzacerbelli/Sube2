<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Estacion" table="Estacion">
		<id column="idEstacion" name="idEstacion">
			<generator class="identity" />
		</id>
		
		<property column="nombre" name="nombre" type="string" />
		
		<many-to-one name="linea" class="datos.Linea" column="idLinea"/>
		
		<set name="estacionRamales" cascade="all" table="ramal_tiene_estacion" order-by="nroEstacion asc" inverse="true" lazy="true" fetch="select">
			<key column="idEstacion" not-null="false"/>
			<one-to-many class="datos.RamalEstacion"/>
		</set>
		
	</class>
</hibernate-mapping>